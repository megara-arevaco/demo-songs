{
  "name": "demo-songs",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "pnpm --filter @demo-songs/schemas build && pnpm -r --parallel dev",
    "serve": "pnpm --filter api run start & pnpm --filter frontend run preview",
    "build:all": "pnpm --filter @demo-songs/schemas build && pnpm --filter api build && pnpm --filter frontend build",
    "build": "pnpm run build:all",
    "build:api": "pnpm --filter @demo-songs/schemas build && pnpm --filter api build",
    "test:api": "pnpm --filter api test",
    "build:frontend": "pnpm --filter frontend build",
    "test:frontend": "pnpm --filter frontend test",
    "build:schemas": "pnpm --filter @demo-songs/schemas build"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
