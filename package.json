    "daisyui": "^5.0.50",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^5.0.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.12",
    "zod": "^4.1.1",
    "zustand": "^5.0.8",
    "@demo-songs/schemas": "workspace:*"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
